.container
    .well 
        h4 {{metrics.person.name}}
            .row
                .col-md-2
                    img(src='/images/{{metrics.person.photo }}')
                .col-md-3
                    p Date: {{metrics.date | date }}                
                    p DOB: {{metrics.person.DOB | date }}
                    p AGE: {{age}}
                    p Gender: {{metrics.person.gender}}
                .col-md-3
                    p Systolic: {{metrics.sys }}
                    p Diasolic: {{metrics.dia }}
                    p Height: {{metrics.person.height}} (M)
                    p Pulse: {{metrics.pulse }}
                    p Highest Pulse: {{maxPulse}}
                    
                .col-md-3
                    p Initial Weight: {{metrics.person.initialWeight}} Current: {{metrics.weight}} kg
                    P Weight Loss: {{metrics.person.initialWeight - metrics.weight  | number : 2}} kg
                    p BMI: {{bmi}}
                    p Waist: {{metrics.waist}}
    .well        
        .row
            .col-md-4
                h3 Blood Pressure (BP)
                p(ng-show="bpHigh")
                    img(src='/images/bpHigh.jpg')
                p(ng-show="bpPreHigh")
                        img(src='/images/bpPreHigh.jpg')
                p(ng-show="bpNormal")
                        img(src='/images/bpNormal.jpg')
                p(ng-show="bpLow")
                        img(src='/images/bpLow.jpg')
            .col-md-4       
                h3 Heart Rate (pulse)

                img(src='/images/{{HRImage}}')

                h5 {{ pulseLevelMessage }}
            .col-md-4
                h3 BMI (Body Mass Index)
                img(src='/images/{{bmiImage}}')
        .well 
          .row
          .checkbox
            .col-md-4
                input(type="checkbox" ng-model="showBP" name="showBP").form-control
                p Blood
                p Pressure Chart
                p(ng-show="showBP")
                    img(src='/images/bloodpressure.jpg')
            .col-md-5
                input(type="checkbox" ng-model="showHR" name="showHR").form-control
                p Heart
                p Rate Chart
                p &nbsp
                p(ng-show="showHR")
                    img(src='/images/normalHeartRate.jpg')
            .col-md-3
                input(type="checkbox" ng-model="showBMI" name="showBMI").form-control
                p BMI
                p Chart
                p &nbsp
                p(ng-show="showBMI")
                    img(src='/images/bmiMales.jpg')
