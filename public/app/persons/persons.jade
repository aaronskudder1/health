.container
    .jumbotron
        h1 Patients
    .row
        .col-md-12
            .panel.panel-primary
              .panel-heading.text-center People
              .panel-body
                a.btn.btn-primary(href="/addPerson") Add Patient
                table.table.table-hover.table-striped.table-condensed
                    thead
                      tr
                        th .
                        th Name
                        th DOB
                    tbody
                      tr(ng-repeat="person in persons | filter:searchText | orderBy:sortOrder")
                        td
                            img(src='images/{{person.photo }}')
                        td
                          a(href="/persons/personDetails/{{person._id}}") {{person.name}}
                        td DOB {{person.DOB | date}}
